<script>
    $(window).scroll(function() {
        $('#cats').each(function(){
        var imagePos = $(this).offset().top;

        var topOfWindow = $(window).scrollTop();
            if (imagePos < topOfWindow+370) {
                $(this).addClass("animated fadeInUp");
                $(this).attr('style','visibility: visible;');
            }
        });
        $('#services').each(function(){
        var imagePos = $(this).offset().top;

