<% @page_title = "SignUp" %>
<div class="fullscreen-bg"></div>
<div id="signinn">
<div class="container">

<div class=" col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 ">
<div class="admin-form theme-primary mw1000 center-block" style="padding-bottom: 100px;">

   <div class="panel heading-border panel-primary">
  <%= form_for(@user,:url=>sign_up_main_index_path,:html => {:id => "user"}) do |f| %>
            <div class="panel-heading">
                  <h3 class="panel-title" style="font-size:1.5em;">مستخدم جديد</h3>
            </div>

            <label for="username" class="field prepend-icon">
      <%= f.text_field :username, :class=>"form-control",
          :required=>"true",:placeholder=>"إسم المستخدم" ,:id=>"username"%>
          <label for="username" class="field-icon">
              <i class="fa fa-user"></i>
          </label>

          </label>

          <br>
          <br>

  <label for="email" class="field prepend-icon">
    <%= f.text_field :email,:class=>"form-control",:placeholder=>"البريد الالكتروني", :required=>"true",:id=>"signup-email"%> 
    <label for="email" class="field-icon">
              <i class="fa fa-envelope"></i>
          </label>
          </label>

          <br>
          <br>


    <label for="password" class="field prepend-icon">
    <%= f.password_field :password,:id=>"pass",:class=>"form-control" ,:placeholder=>"كلمة المرور", :required=>"true",:id=>"signup-pass"%>
    <label for="password" class="field-icon">
              <i class="fa fa-lock"></i>
          </label>
          </label>

          <br>
          <br>




    <label for="password_confirmation" class="field prepend-icon">
    <%= f.password_field :password_confirmation,:class=>"form-control" ,:placeholder=>"تأكيد كلمة المرور", :required=>"true",:id=>"pass_confirm"%>
    <label for="password_confirmation" class="field-icon">
              <i class="fa fa-check"></i>
          </label>
          </label>

          <br>
          <br>

 
    <%= f.submit "تسجيل",:id=>"signup-submit",:class=>"btn btn-lg btn-primary btn-block" %>

  <% end %>
  </div>
</div>
</div>
</div>
</div>

