<script>
 
$(document).ready(function(){

    var signup = {
    formbox: $('#user'),
    emailbox: $("#signup-email"),
    usernamebox: $("#username"),
    passwordbox: $("#signup-pass"),
    confirmbox: $("#pass_confirm"),
    valid: {"signup-email": false,"username": false,"pass_confirm": false,"signup-pass": false},
    showError: function(id, msg) {
      var error = $('<p>').addClass('error').text(msg);
      error.insertAfter('#'+id);
      $('#'+id).addClass('error-box');
    },
    resetValidation: function(id){
      $('#'+id).siblings('.error').remove();
      $('#'+id).removeClass('error-box');
      this.valid[id] = true;
    },
    resetAllValidation: function() {
      this.formbox.siblings('.error').remove();
      this.formbox.siblings('.error').remove();
      for (myvar in this.valid) {
        this.valid[myvar] = true;
      }
    },
    validateEmail: function() {
      var email = this.emailbox.val();
        id = this.emailbox.attr('id');
        pattern = /^[\w.%+-]+@([\w-]+\.)+[\w]{2,}$/i;

      if (email == ''|| email==null || email == "undefined") {
        this.showError(id, "يجب إدخال البريد الالكتروني");
        this.valid[id] = false;
      } else if (!pattern.test(email)){
        this.showError(id, "يرجى استخدام بريد الكتروني صحيح");
        this.valid[id] = false;
      } else {
        var that = this;
        $.ajax({
          type: 'POST',
          url: '<%=check_email_main_index_path%>',
          data: {email: email},
          //async: false,
          complete: function(jqXHR, textStatus){
            if(jqXHR.status == "203"){
              that.valid[id] = false;
              that.showError(id, "البريد الالكتروني مسجل مسبقا");
            }else if(jqXHR.status == "202"){
              //valid
              

            }
          }
        });
      }
    },
    validateUsername: function() {
      var user = this.usernamebox.val();
        id = this.usernamebox.attr('id');

      if (user == ''|| user==null || user == "undefined") {
        this.showError(id, "يجب ادخال اسم المستخدم");
        this.valid[id] = false;
      } else if (user.length < 3 ){
        this.showError(id, "يجب ان يكون اسم المستخدم اكثر من 3 خانات");
        this.valid[id] = false;
      } else {
        var that = this;
        $.ajax({
          type: 'POST',
          url: '<%=check_username_main_index_path%>',
          data: {username: user},
          //async: false,
          complete: function(jqXHR, textStatus){
            if(jqXHR.status == "203"){
              that.valid[id] = false;
              that.showError(id, "إسم المستخدم موجود");
            }else if(jqXHR.status == "202"){
              //valid
            }
          }
        });
      }
    },
    validatePassword: function() {
      var password = this.passwordbox.val();
        id = this.passwordbox.attr('id');

      if (password == ''|| password==null || password == "undefined") {
        this.showError(id, "يجب ادخال كلمة المرور");
        this.valid[id] = false;
      } else if (password.length < 6 ){
        this.showError(id, "يجب ان تكون كلمة المرور اكثر من 6 خانات");
        this.valid[id] = false;
      }
    },
    validateConfirm: function() {
      var confirm = this.confirmbox.val();
      var password = this.passwordbox.val();
        id = this.confirmbox.attr('id');

      if (confirm == ''|| confirm==null || confirm == "undefined") {
        this.showError(id, "يجب تأكيد كلمة المرور");
        this.valid[id] = false;
      } else if (confirm.length < 6 ){
        this.showError(id, "يجب ان تكون كلمة المرور اكثر من 6 خانات");
        this.valid[id] = false;
      } else if(confirm != password){
        this.showError(id, "لم تتطابق مع كلمة المرور");
        this.valid[id] = false;
      }
    },
    
  };

  $("#signup-submit").click(function(e){
    for (myvar in signup.valid) {
      if (! signup.valid[myvar]) {
        e.preventDefault();
        return false;
      }
    }
    signup.resetAllValidation();
    signup.validateOriginalLanguage();
  });

  $("#signup-email, #signup-pass, #signup-site, #username, #pass_confirm").focus(function(){
    signup.resetValidation($(this).attr('id'));
  });
  $("#signup-email").blur(function(){
    signup.resetValidation($(this).attr('id'));
    signup.validateEmail();
  });
  $("#signup-pass").blur(function(){
    signup.resetValidation($(this).attr('id'));
    signup.validatePassword();
  });
  $("#pass_confirm").blur(function(){
    signup.resetValidation($(this).attr('id'));
    signup.validateConfirm();
  });
  $("#username").blur(function(){
    signup.resetValidation($(this).attr('id'));
    signup.validateUsername();
  });


});
</script>

