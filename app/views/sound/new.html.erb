<div class="text-center">
  <h1 style="padding-bottom:23px;">مقطع جديد</h1>
</div>

<div class="Sign_Form col-lg-8 col-lg-offset-2 ">

<%= form_for(@sound,:url=>sound_index_path) do |f|%>

   
    <%= f.text_field :title,:class=>"form-control", :required=>"true", :placeholder=>"عنوان المقطع" %>
  <br />

 <div class="col-lg-12" style="margin-top: 30px;">
   <%= f.text_area :content,:style=>"height:300px;background-color:#eee;",:class=>"form-control", :required=>"true",:placeholder=>"iframe..." %>
   </div>

  <div class="col-lg-12 text-center">
    <div style="margin-top:30px;margin-bottom:30px;">
    <%= f.submit 'إضافة المقطع', :class => "btn btn-success" %>
    <%= link_to "عودة",dashboard_index_path,:class=>"btn btn-default", :data=>{:placement=>"bottom",:toggle=>"tooltip", :title=>"عودة"} %>
</div>
  </div>
<% end %>
</div>

